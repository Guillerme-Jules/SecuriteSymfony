{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .message-form { margin-top: 20px; }
        .message-list { margin-top: 20px; }
        .message { margin-bottom: 10px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello</h1>
        <p>Les messages</p>
        <div class="message-form">
            {{ form_start(form) }}
            {#  <textarea id="summernote" name="content" class="summernote">{{ form.vars.value.content }}</textarea>#}
            {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary'} }) }} {# Bouton de soumission #}
            {{ form_end(form) }}
        </div>
        <div class="message-list">
            <h2>Messages précédents</h2>
            {% for message in messages %}
                <div class="message">
                    <div class="message-content">{{ message.content | raw }}</div>
                </div>
            {% endfor %}
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $('.summernote').summernote({
                toolbar: [
                    // [groupName, [list of button]]
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['height', ['height']]
                ]
            });

        });
    </script>
{% endblock %}
